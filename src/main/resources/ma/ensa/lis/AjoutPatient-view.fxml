<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="600.0" stylesheets="@ajoutpa_style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.ensa.lis.controllers.AjoutPatientController">
   <children>
      <!-- Titre -->
      <Text layoutX="140.0" layoutY="34.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="AJOUTER UN PATIENT">
         <font>
            <Font name="Calisto MT" size="30.0" />
         </font>
      </Text>

      <!-- Champs Patient -->
      <TextField fx:id="nom" layoutX="7.0" layoutY="92.0" prefHeight="26.0" prefWidth="294.0" styleClass="text-field" />
      <TextField fx:id="prenom" layoutX="304.0" layoutY="92.0" prefHeight="26.0" prefWidth="287.0" styleClass="text-field" />
      <TextField fx:id="age" layoutX="7.0" layoutY="150.0" prefHeight="26.0" prefWidth="294.0" styleClass="text-field" />
      <TextField fx:id="genre" layoutX="305.0" layoutY="150.0" prefHeight="26.0" prefWidth="294.0" styleClass="text-field" />
      <TextField fx:id="email" layoutX="14.0" layoutY="223.0" prefHeight="26.0" prefWidth="578.0" styleClass="text-field" />
      <TextField fx:id="num" layoutX="13.0" layoutY="290.0" prefHeight="26.0" prefWidth="578.0" styleClass="text-field" />
      <TextField fx:id="adresse" layoutX="17.0" layoutY="354.0" prefHeight="26.0" prefWidth="578.0" styleClass="text-field" />

      <!-- Labels -->
      <Label layoutX="16.0" layoutY="65.0" styleClass="label" text="Nom" />
      <Label layoutX="306.0" layoutY="65.0" styleClass="label" text="Prénom" />
      <Label layoutX="14.0" layoutY="125.0" styleClass="label" text="Âge" />
      <Label layoutX="306.0" layoutY="125.0" styleClass="label" text="Genre" />
      <Label layoutX="10.0" layoutY="196.0" styleClass="label" text="Email" />
      <Label layoutX="14.0" layoutY="264.0" styleClass="label" text="Numéro de téléphone" />
      <Label layoutX="14.0" layoutY="330.0" styleClass="label" text="Adresse" />

      <!-- TableView des Tests -->
      <Label layoutX="14.0" layoutY="390.0" styleClass="label" text="Sélectionnez les Tests :" />
      <TableView fx:id="testTableView" layoutX="14.0" layoutY="410.0" prefHeight="200.0" prefWidth="578.0" styleClass="table-view">
         <columns>
            <TableColumn fx:id="testIdCol" prefWidth="80.0" text="ID" />
            <TableColumn fx:id="testNomCol" prefWidth="120.0" text="Nom" />
            <TableColumn fx:id="testCatCol" prefWidth="120.0" text="Catégorie" />
            <TableColumn fx:id="testDescCol" prefWidth="180.0" text="Description" />
            <TableColumn fx:id="testSelectCol" prefWidth="80.0" text="Sélectionner" />
         </columns>
      </TableView>

      <!-- Boutons -->
      <Button layoutX="9.0" layoutY="650.0" mnemonicParsing="false" onAction="#returnn" prefHeight="26.0" prefWidth="78.0" styleClass="button" text="Retour" />
      <Button layoutX="106.0" layoutY="650.0" mnemonicParsing="false" onAction="#ajouter" prefHeight="32.0" prefWidth="141.0" styleClass="button" text="Ajouter Patient" />
      <Button layoutX="355.0" layoutY="650.0" mnemonicParsing="false" onAction="#accederbarcode" prefHeight="26.0" prefWidth="137.0" styleClass="button" text="Voir Barcode" />
   </children>
</AnchorPane>
